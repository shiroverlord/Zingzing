package Tools;

import java.util.List;

import model.User;

import org.json.JSONArray;
import org.json.JSONObject;

import tools.Tools;

public class ConstructJSONObjects {
	
	public static JSONObject getJSONforUser(User u) {
		return new JSONObject()
		.put("id", u.getId())
		.put("lastname", u.getLastname())
		.put("firstname", u.getFirstname())
		.put("birthday", Tools.formatDateToDisplay(u.getBirthday()));
	}
	
	public static JSONArray getJSONArrayforListUsers(List<User> lu) {
		JSONArray ja = new JSONArray();
		for (User user : lu) {
			ja.put(getJSONforUser(user));
		}
		return ja;
	}
}
