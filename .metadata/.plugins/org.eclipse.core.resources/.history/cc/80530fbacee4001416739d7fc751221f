ActionListener JCOMBO0 = new ActionListener() {   
 @Override
    public void actionPerformed(ActionEvent ae) {
        if(jComboBox1.getSelectedIndex()>1){
            String[] info = link.getUserInfo();
            jLabel1.setText(info[0]);
            jLabel2.setText(info[1]);
            jLabel3.setText(info[2]);
            jLabel4.setText(info[3]);       
        }
}};

MouseListener tableMouseListener = new MouseAdapter() {
      @Override
      public void mouseClicked(MouseEvent e) {
  
           int row = jTable1.rowAtPoint(e.getPoint());//get mouse-selected row
           int col = jTable1.columnAtPoint(e.getPoint());//get mouse-selected col
           if(col == 2 || col == 1){
               DateChooserDialog jDateChooser = new DateChooserDialog();
               
               Point p = new Point(0, 0);
               jDateChooser.showDialog(new JFrame(),true,p);
               
               Calendar laDate = jDateChooser.getSelectedDate();
               laDate.setTimeZone((TimeZone.getTimeZone("Europe/Paris")));
              
               Date date = new Date();
               date = laDate.getTime();
               jTable1.setValueAt(date, row, col);
               
        
           }
         
      }
   };

ActionListener JTABLE0 = new ActionListener() {   
 @Override
    public void actionPerformed(ActionEvent ae) {
         jTable1.getSelectedColumn();
}};
    
